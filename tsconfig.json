{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "**/node_modules/@types/",
      "./src/typings/"
    ],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ]
}
